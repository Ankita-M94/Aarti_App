<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#EEEEEE"
    android:padding="2dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        app:contentPadding="4dp"
        app:cardBackgroundColor="#EEEEEE"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:orientation="vertical"
            android:background="@drawable/shape"
            tools:ignore="MissingConstraints">


            <LinearLayout
                android:id="@+id/coutry_coontainer_without_isdCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/llCountryList"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:weightSum="1">

                    <ImageView
                        android:id="@+id/imgvCountryFlag"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="0.2"
                        app:srcCompat="@drawable/ic_atom_icon_green_tick_default"
                        android:layout_gravity="center"
                        android:gravity="center"
                        >

                    </ImageView>


                    <TextView
                        android:id="@+id/txtCountryName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="sans-serif-condensed"
                        android:text="Ganesh Aarti"
                        android:textSize="22sp">


                    </TextView>

                    <ImageView
                        android:id="@+id/imgRightTick"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="0.2"
                        android:src="@drawable/ic_atom_icon_green_tick_default"
                        android:visibility="invisible">

                    </ImageView>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>