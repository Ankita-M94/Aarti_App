<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#EEEEEE"
    android:padding="2dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        app:contentPadding="4dp"
        app:cardBackgroundColor="#EAEAEA"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/shape"
            tools:ignore="MissingConstraints">


            <LinearLayout
                android:id="@+id/coutry_coontainer_without_isdCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/llCountryList"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:weightSum="1">

                  <!--  <ImageView
                        android:visibility="gone"
                        android:id="@+id/imgvCountryFlag"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="0.2"
                        app:srcCompat="@drawable/ic_atom_icon_green_tick_default"
                        android:layout_gravity="center"
                        android:gravity="center"
                        >

                    </ImageView>-->


                    <TextView
                        android:id="@+id/txtCountryName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="0.8"
                        android:fontFamily="@font/roboto_black_italic"
                        android:gravity="center"
                        android:text="aarati"
                        android:textAlignment="viewStart"
                        android:textSize="20sp"
                        tools:ignore="RtlCompat">
                    </TextView>

                    <ImageView
                        android:id="@+id/imgRightTick"
                        android:layout_width="0dp"
                        android:layout_height="20dp"
                        android:layout_weight="0.2"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_atom_icon_green_tick_default"
                        android:visibility="invisible">

                    </ImageView>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>